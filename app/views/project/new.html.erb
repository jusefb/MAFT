<div class="edit-form">
  <div class="validation-errors">
    <%= @project.errors.full_messages.first if @project.errors.any? %>
  </div>
  <%= form_for @project, url: {action: :create} do |f| %>
      <div class="edit-row">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="edit-row">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
      <div class="edit-row">
        <%= f.label :owner %>
        <%= f.text_field :owner %>
      </div>
      <div class="edit-row">
        <%= f.label :start_date %>
        <%= f.date_select :start_date %>
      </div>
      <div class="edit-row">
        <%= f.label :end_date %>
        <%= f.date_select :end_date %>
      </div>
      <div class="edit-row">
        <%= f.submit 'Create' %>
      </div>
  <% end %>
</div>